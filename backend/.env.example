# Bakery Invoice API Environment Variables

# Application Configuration
ENVIRONMENT=development
PORT=8081

# Database Configuration
DB_CONNECTION_STRING=./data/bakery.db
DB_MAX_OPEN_CONNS=25
DB_MAX_IDLE_CONNS=25

# Storage Configuration
STORAGE_TYPE=local
STORAGE_LOCAL_PATH=./data/files

# AWS S3 Configuration (for production)
S3_BUCKET=bakery-invoice-files
S3_REGION=us-east-1

# JWT Configuration
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRY_HOURS=24

# SMTP Configuration
SMTP_HOST=localhost
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM=noreply@bakery.local

# Database Configuration (for RDS in production)
DB_USER=bakery_user
DB_PASSWORD=secure_password_change_in_production