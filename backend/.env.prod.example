# Production Environment Variables for Bakery Invoice API
# Copy this file to .env.prod and update the values
# IMPORTANT: Use strong, unique values for all secrets

# Application Environment
ENVIRONMENT=prod
STAGE=prod

# Database Configuration
DB_CONNECTION_STRING=host=bakery-invoice-prod.cluster-xyz.us-east-1.rds.amazonaws.com port=5432 user=bakery_user password=CHANGE_TO_STRONG_PASSWORD dbname=bakery_invoice sslmode=require
DB_MAX_OPEN_CONNS=50
DB_MAX_IDLE_CONNS=20
DB_MAX_LIFETIME=1800

# Storage Configuration
STORAGE_TYPE=s3
S3_BUCKET=bakery-invoice-prod-files
S3_REGION=us-east-1
S3_ACCESS_KEY_ID=
S3_SECRET_ACCESS_KEY=

# SMTP Configuration
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USERNAME=apikey
SMTP_PASSWORD=your-sendgrid-api-key
SMTP_FROM=noreply@bakery-invoice.com
SMTP_FROM_NAME=Bakery Invoice System
SMTP_USE_TLS=true
SMTP_USE_SSL=false

# JWT Configuration
JWT_SECRET=GENERATE_STRONG_SECRET_KEY_256_BITS_MINIMUM
JWT_EXPIRATION_HOURS=24
JWT_ISSUER=bakery-invoice-prod

# Tax Configuration
TAX_COUNTRY_CODE=AU
TAX_GST_RATE=0.10
TAX_INVOICE_THRESHOLD=82.50

# Logging Configuration
LOG_LEVEL=warn
LOG_FORMAT=json

# AWS Configuration
AWS_REGION=us-east-1
AWS_PROFILE=production

# Production-specific settings
DEBUG=false
ENABLE_CORS=true
ENABLE_SWAGGER=false  # Disable in production for security

# Monitoring and Alerting
SENTRY_DSN=https://your-production-sentry-dsn@sentry.io/project-id
NEW_RELIC_LICENSE_KEY=your-production-new-relic-license-key
ALERT_EMAIL=alerts@bakery-invoice.com

# File Upload Limits
MAX_FILE_SIZE=10485760  # 10MB
ALLOWED_FILE_TYPES=pdf,jpg,jpeg,png

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=30

# Cache Configuration
CACHE_ENABLED=true
CACHE_TTL=600

# Email Template Configuration
EMAIL_TEMPLATE_PATH=templates/email
EMAIL_LOGO_URL=https://bakery-invoice.com/logo.png

# Performance Settings
ENABLE_PROFILING=false
ENABLE_METRICS=true

# Security Settings
CORS_ALLOWED_ORIGINS=https://bakery-invoice.com,https://admin.bakery-invoice.com
TRUSTED_PROXIES=10.0.0.0/8
SECURE_HEADERS_ENABLED=true

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 1 * * *  # Daily at 1 AM
BACKUP_RETENTION_DAYS=30

# SSL/TLS Configuration
TLS_CERT_PATH=/etc/ssl/certs/bakery-invoice.crt
TLS_KEY_PATH=/etc/ssl/private/bakery-invoice.key
FORCE_HTTPS=true

# Database Encryption
DB_ENCRYPTION_KEY=GENERATE_STRONG_ENCRYPTION_KEY_256_BITS

# API Keys and External Services
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX

# Compliance and Auditing
AUDIT_LOG_ENABLED=true
AUDIT_LOG_RETENTION_DAYS=2555  # 7 years for tax compliance
GDPR_COMPLIANCE_ENABLED=true

# High Availability Settings
HEALTH_CHECK_INTERVAL=30
GRACEFUL_SHUTDOWN_TIMEOUT=30
MAX_REQUEST_TIMEOUT=30

# Resource Limits
MAX_CONCURRENT_REQUESTS=1000
MAX_MEMORY_USAGE=1024  # MB
MAX_CPU_USAGE=80       # Percentage

# Feature Flags
FEATURE_EMAIL_RECEIPTS=true
FEATURE_PDF_GENERATION=true
FEATURE_BULK_OPERATIONS=true
FEATURE_ADVANCED_REPORTING=true

# Maintenance Mode
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE="System is under maintenance. Please try again later."