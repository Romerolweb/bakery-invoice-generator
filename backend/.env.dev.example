# Development Environment Variables for Bakery Invoice API
# Copy this file to .env.dev and update the values

# Application Environment
ENVIRONMENT=dev
STAGE=dev

# Database Configuration
DB_CONNECTION_STRING=/mnt/efs/bakery-dev.db
DB_MAX_OPEN_CONNS=10
DB_MAX_IDLE_CONNS=5
DB_MAX_LIFETIME=300

# Storage Configuration
STORAGE_TYPE=s3
S3_BUCKET=bakery-invoice-dev-files
S3_REGION=us-east-1
S3_ACCESS_KEY_ID=
S3_SECRET_ACCESS_KEY=

# SMTP Configuration (MailHog for development)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM=dev@bakery-invoice.local
SMTP_FROM_NAME=Bakery Invoice Dev
SMTP_USE_TLS=false
SMTP_USE_SSL=false

# JWT Configuration
JWT_SECRET=dev-secret-key-change-in-production
JWT_EXPIRATION_HOURS=24
JWT_ISSUER=bakery-invoice-dev

# Tax Configuration
TAX_COUNTRY_CODE=AU
TAX_GST_RATE=0.10
TAX_INVOICE_THRESHOLD=82.50

# Logging Configuration
LOG_LEVEL=debug
LOG_FORMAT=json

# AWS Configuration (for Lambda deployment)
AWS_REGION=us-east-1
AWS_PROFILE=default

# Development-specific settings
DEBUG=true
ENABLE_CORS=true
ENABLE_SWAGGER=true

# Monitoring (optional for dev)
SENTRY_DSN=
NEW_RELIC_LICENSE_KEY=

# File Upload Limits
MAX_FILE_SIZE=10485760  # 10MB
ALLOWED_FILE_TYPES=pdf,jpg,jpeg,png

# Rate Limiting (disabled for dev)
RATE_LIMIT_ENABLED=false
RATE_LIMIT_REQUESTS_PER_MINUTE=100

# Cache Configuration (disabled for dev)
CACHE_ENABLED=false
CACHE_TTL=300

# Email Template Configuration
EMAIL_TEMPLATE_PATH=templates/email
EMAIL_LOGO_URL=https://dev.bakery-invoice.local/logo.png

# Development Tools
ENABLE_PROFILING=true
ENABLE_METRICS=true