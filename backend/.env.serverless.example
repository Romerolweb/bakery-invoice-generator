# Bakery Invoice API - Serverless Environment Variables

# Deployment Configuration
ENVIRONMENT=production
STAGE=prod

# AWS Configuration
AWS_REGION=us-east-1
AWS_LAMBDA_FUNCTION_NAME=bakery-invoice-api

# Database Configuration (RDS for serverless)
RDS_ENDPOINT=bakery-invoice-prod.cluster-xyz.us-east-1.rds.amazonaws.com
RDS_PORT=5432
RDS_DB_NAME=bakery_invoice
RDS_USERNAME=bakery_user
RDS_PASSWORD=secure_password_change_in_production

# Alternative: EFS-mounted SQLite for serverless
# DB_CONNECTION_STRING=/mnt/efs/bakery.db

# Storage Configuration (S3 for serverless)
STORAGE_TYPE=s3
S3_BUCKET=bakery-invoice-files-prod
S3_REGION=us-east-1

# JWT Configuration
JWT_SECRET=your-production-jwt-secret-change-this
JWT_EXPIRY_HOURS=24

# SMTP Configuration (SES recommended for serverless)
SMTP_HOST=email-smtp.us-east-1.amazonaws.com
SMTP_PORT=587
SMTP_USERNAME=your-ses-smtp-username
SMTP_PASSWORD=your-ses-smtp-password
SMTP_FROM=noreply@yourbakery.com

# Serverless Optimization
# Connection pooling settings for Lambda
DB_MAX_OPEN_CONNS=5
DB_MAX_IDLE_CONNS=2

# Lambda-specific settings
LAMBDA_TIMEOUT=30
LAMBDA_MEMORY=512

# Monitoring and Logging
LOG_LEVEL=info
ENABLE_METRICS=true

# Feature Flags
ENABLE_EMAIL_DELIVERY=true
ENABLE_PDF_GENERATION=true
ENABLE_AUDIT_LOGGING=true