# Staging Environment Variables for Bakery Invoice API
# Copy this file to .env.staging and update the values

# Application Environment
ENVIRONMENT=staging
STAGE=staging

# Database Configuration
DB_CONNECTION_STRING=host=bakery-invoice-staging.cluster-xyz.us-east-1.rds.amazonaws.com port=5432 user=bakery_user password=CHANGE_ME dbname=bakery_invoice sslmode=require
DB_MAX_OPEN_CONNS=25
DB_MAX_IDLE_CONNS=10
DB_MAX_LIFETIME=600

# Storage Configuration
STORAGE_TYPE=s3
S3_BUCKET=bakery-invoice-staging-files
S3_REGION=us-east-1
S3_ACCESS_KEY_ID=
S3_SECRET_ACCESS_KEY=

# SMTP Configuration
SMTP_HOST=smtp.mailtrap.io
SMTP_PORT=587
SMTP_USERNAME=your-mailtrap-username
SMTP_PASSWORD=your-mailtrap-password
SMTP_FROM=staging@bakery-invoice.com
SMTP_FROM_NAME=Bakery Invoice Staging
SMTP_USE_TLS=true
SMTP_USE_SSL=false

# JWT Configuration
JWT_SECRET=staging-secret-key-generate-strong-key
JWT_EXPIRATION_HOURS=24
JWT_ISSUER=bakery-invoice-staging

# Tax Configuration
TAX_COUNTRY_CODE=AU
TAX_GST_RATE=0.10
TAX_INVOICE_THRESHOLD=82.50

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# AWS Configuration
AWS_REGION=us-east-1
AWS_PROFILE=staging

# Staging-specific settings
DEBUG=false
ENABLE_CORS=true
ENABLE_SWAGGER=true

# Monitoring
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
NEW_RELIC_LICENSE_KEY=your-new-relic-license-key

# File Upload Limits
MAX_FILE_SIZE=10485760  # 10MB
ALLOWED_FILE_TYPES=pdf,jpg,jpeg,png

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# Cache Configuration
CACHE_ENABLED=true
CACHE_TTL=300

# Email Template Configuration
EMAIL_TEMPLATE_PATH=templates/email
EMAIL_LOGO_URL=https://staging.bakery-invoice.com/logo.png

# Performance Settings
ENABLE_PROFILING=false
ENABLE_METRICS=true

# Security Settings
CORS_ALLOWED_ORIGINS=https://staging.bakery-invoice.com,https://staging-admin.bakery-invoice.com
TRUSTED_PROXIES=10.0.0.0/8

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=7